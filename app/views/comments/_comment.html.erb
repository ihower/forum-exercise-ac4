<div class="media" id="comment-<%= comment.id %>">
  <div class="media-left">
    <a href="#">
      <% if comment.user %>
        <%= user_avatar comment.user %>
      <% end %>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= comment.author_name %></h4>
    <%= simple_format comment.content %>
    <p class="text-right">
      <%= comment.created_at.to_s(:short) %>

      <% if comment.can_delete_by?(current_user) %>
      <%= link_to "Delete", topic_comment_path(@topic, comment), :method => :delete, :data => { :confirm => "Are you sure?"} %>
      <% end %>

    </p>
  </div>
</div>