
<p><%= link_to "New Topic", new_topic_path, :class => "btn btn-primary" %></p>

<table class="table">
<tr>
  <th>Title</th>
  <th>Author</th>
</tr>
<% @topics.each do |t| %>
  <tr>
    <td><%= link_to t.title, topic_path(t) %></td>
    <td><%= t.author_name %></td>
  </tr>
<% end %>
</table>

<%= paginate @topics %>