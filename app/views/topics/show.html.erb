<h2><%= @topic.title %> <small><%= @topic.author_name %></small></h2>

<%= user_avatar(@topic.user) %>

<%= simple_format @topic.content %>

<p class="text-right"><%= @topic.created_at.to_s(:short) %></p>

<hr>

<% @topic.comments.each do |comment| %>

<div class="media">
  <div class="media-left">
    <a href="#">
      <% if comment.user %>
        <%= user_avatar comment.user %>
      <% end %>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= comment.author_name %></h4>
    <%= simple_format comment.content %>
    <p class="text-right"><%= comment.created_at.to_s(:short) %></p>
  </div>
</div>

<% end %>